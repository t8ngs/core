{
  "name": "@t8ngs/core",
  "version": "1.0.0",
  "description": "Core testing framework for t8ngs - eight things to test simply and quickly",
  "type": "module",
  "keywords": [
    "testing",
    "test-runner",
    "typescript",
    "t8ngs"
  ],
  "author": "JefteCosta <jefteamorim@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8ngs/core.git"
  },
  "bugs": {
    "url": "https://github.com/t8ngs/core/issues"
  },
  "homepage": "https://github.com/t8ngs/core#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "!dist/tests",
    "!dist/**/*.test.*"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/src/types.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "c8 glob -c \"node --import=ts-node-maintained/register/esm --enable-source-maps --test\" \"tests/**/*.spec.ts\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "del build",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint && npm run clean",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "version": "npm run build",
    "prepare": "husky",
    "commit": "cz"
  },
  "devDependencies": {
    "@arapucajs/eslint-config": "^1.1.2",
    "@arapucajs/prettier": "^1.1.1",
    "@arapucajs/tsconfig": "^1.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@swc/core": "^1.13.5",
    "@types/async-retry": "^1.4.9",
    "@types/chai": "^5.2.2",
    "@types/node": "^24.5.2",
    "c8": "^10.1.3",
    "chai": "^6.0.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^7.0.0",
    "eslint": "^9.36.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "ts-node-maintained": "^10.9.6",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@poppinss/hooks": "^7.2.6",
    "@poppinss/macroable": "^1.1.0",
    "@poppinss/string": "^1.7.0",
    "async-retry": "^1.3.3",
    "emittery": "^1.2.0",
    "string-width": "^8.1.0",
    "time-span": "^5.1.0"
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/types.ts"
    ],
    "outDir": "./dist",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": false,
    "target": "esnext"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@arapucajs/prettier"
}
